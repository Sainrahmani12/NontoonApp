<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.account.AccountFragment">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/user" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cw_profile"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:enabled="false"
            android:fontFamily="@font/poppinslight"
            android:gravity="center"
            android:padding="20dp"
            android:text="Husain Rahmani"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:enabled="false"
            android:fontFamily="@font/poppinslight"
            android:gravity="center"
            android:padding="20dp"
            android:text="sainrahmani@gmail.com"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_changeProfile"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/hijau_pudar"
            android:fontFamily="@font/fredokaone"
            android:text="Change Profile"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_changePassword"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/hijau_pudar"
            android:fontFamily="@font/fredokaone"
            android:text="Change Password"
            android:textAllCaps="true"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@id/cw_profile"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:fontFamily="@font/fredokaone"
        android:text="Logout"
        android:textAllCaps="true"
        android:textSize="15sp" />

</RelativeLayout>